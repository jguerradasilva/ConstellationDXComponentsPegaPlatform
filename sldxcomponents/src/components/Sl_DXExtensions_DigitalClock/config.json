{
  "name": "Sl_DXExtensions_DigitalClock",
  "label": "",
  "description": "A simple digital clock widget that displays current time",
  "organization": "Sl",
  "version": "1.0.0",
  "library": "DXExtensions",
  "allowedApplications": [],
  "componentKey": "Sl_DXExtensions_DigitalClock",
  "type": "Widget",
  "subtype": ["PAGE","CASE"],
  "icon": "OneColumnPage.svg",
  "properties": [
    {
      "name": "label",
      "label": "Label",
      "format": "TEXT",
      "defaultValue": "Digital Clock"
    },
    {
      "name": "format24Hour",
      "label": "24-hour format",
      "format": "BOOLEAN",
      "defaultValue": false
    },
    {
      "name": "showSeconds",
      "label": "Show seconds",
      "format": "BOOLEAN",
      "defaultValue": true
    },
    {
      "name": "showDate",
      "label": "Show date",
      "format": "BOOLEAN",
      "defaultValue": true
    },
    {
      "name": "backgroundColor1",
      "label": "Background color 1",
      "format": "TEXT",
      "defaultValue": "#667eea"
    },
    {
      "name": "backgroundColor2",
      "label": "Background color 2",
      "format": "TEXT",
      "defaultValue": "#764ba2"
    },
    {
      "name": "textColor",
      "label": "Text color",
      "format": "TEXT",
      "defaultValue": "#ffffff"
    },
    {
      "name": "visibility",
      "label": "Visible",
      "format": "VISIBILITY"
    },
    {
      "label": "Advanced",
      "format": "GROUP",
      "collapsible": true,
      "properties": [
        {
          "name": "testId",
          "label": "Test ID",
          "format": "TEXT",
          "ignorePattern": "[^-_\\p{N}\\p{L}]",
          "includeAnnotations": false
        }
      ]
    }
  ],
  "defaultConfig": {
    "label": "Digital Clock",
    "format24Hour": false,
    "showSeconds": true,
    "showDate": true,
    "backgroundColor1": "#667eea",
    "backgroundColor2": "#764ba2",
    "textColor": "#ffffff"
  }
}
